        "type": "apiKey",
        "in": "header"
      }
    },
    "schemas": {
      "StripeAddCustomerCardInputDto": {
        "type": "object",
        "properties": {
          "number": {
            "type": "string",
            "default": "424242424242"
          },
          "name": {
            "type": "string",
            "default": "full name"
          },
          "expiryMonth": {
            "type": "string",
            "default": "09"
          },
          "expiryYear": {
            "type": "string",
            "default": "2025"
          },
          "cvc": {
            "type": "string",
            "default": "123"
          },
          "brand": {
            "type": "string",
            "enum": [
              "pm_card_visa",
              "pm_card_mastercard",
              "pm_card_jcb",
              "pm_card_amex",
              "pm_card_unionpay"
            ],
            "default": "pm_card_visa"
          }
        },
        "required": [
          "number",
          "name",
          "expiryMonth",
          "expiryYear",
          "cvc",
          "brand"
        ]
      },
      "StripeChargeInputDto": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "default": 10000
          },
          "currency": {
            "type": "string",
            "enum": [
              "VND",
              "USD"
            ],
            "default": "VND"
          },
          "description": {
            "type": "string",
            "default": "Monthly Subscription"
          }
        },
        "required": [
          "amount",
          "currency"
        ]
      }
