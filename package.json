{
  "name": "backend-node-service",
  "version": "1.2.0",
  "description": "",
  "author": "GK Nguyen",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && nest build -p tsconfig.prod.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:ci": "npm run lint -- --output-file eslint_report.json --format json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "npm test -- --coverage",
    "test:ci": "npm run test:cov -- --ci --json --testLocationInResults --outputFile=coverage/jest-coverage.json",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "test:e2e:cov": "npm run test:e2e -- --coverage",
    "test:e2e:ci": "npm run test:e2e:cov -- --ci --json --testLocationInResults --outputFile=coverage-e2e/jest-coverage.json",
    "prepare": "husky",
    "release": "standard-version -s -t '' --no-verify",
    "release:as": "npm run release -- --release-as",
    "release:patch": "npm run release:as patch",
    "release:minor": "npm run release:as minor",
    "release:major": "npm run release:as major",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d ./src/modules/common/database/postgres/$npm_config_db/$npm_config_db.provider.ts",
    "typeorm:migration:generate": "npm run typeorm -- migration:generate ./src/modules/common/database/postgres/$npm_config_db/migrations/$npm_config_name",
    "typeorm:migration:run": "npm run build && npm run typeorm -- migration:run --transaction each",
    "typeorm:migration:revert": "npm run typeorm -- migration:revert"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.4",
    "@nestjs/core": "^10.4.4",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/platform-socket.io": "^10.4.15",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/websockets": "^10.4.15",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.5",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^3.3.12",
    "dotenv": "^16.4.5",
    "express-http-context": "^1.2.4",
    "helmet": "^8.0.0",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "pg": "^8.13.3",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.1.14",
    "response-time": "^2.3.3",
    "rxjs": "^7.2.0",
    "string-template": "^1.0.0",
    "stripe": "^17.1.0",
    "typeorm": "^0.3.20",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@golevelup/ts-jest": "^0.6.1",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.4",
    "@types/config": "^3.3.5",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.1",
    "@types/lodash": "^4.17.10",
    "@types/node": "^22.10.7",
    "@types/response-time": "^2.3.8",
    "@types/string-template": "^1.0.6",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-custom": "file:eslint-custom-rules",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.1.6",
    "jest": "29.5.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.6.2"
  },
  "standard-version": {
    "compareUrlFormat": "https://github.com/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
    "commitUrlFormat": "https://github.com/{{owner}}/{{repository}}/commit/{{hash}}",
    "releaseCommitMessageFormat": "bump version {{currentTag}}",
    "skip": {
      "commit": true,
      "tag": true
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "feature",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "section": "Chores"
      },
      {
        "type": "refactor",
        "section": "Chores"
      },
      {
        "type": "docs",
        "hidden": true
      }
    ]
  }
}
